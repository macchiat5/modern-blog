---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About - Modern Blog">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Hero Section with gradient and modern typography -->
    <section class="mb-20 relative">
      <div class="absolute inset-0 -z-10 bg-gradient-to-br from-purple-100 to-blue-100 dark:from-purple-900/20 dark:to-blue-900/20 blur-3xl opacity-50"></div>
      <h1 class="text-4xl md:text-6xl font-bold text-zinc-800 dark:text-zinc-100 mb-6 text-center bg-clip-text">
        About Modern Blog
      </h1>
      <p class="text-lg md:text-xl text-zinc-600 dark:text-zinc-300 max-w-2xl mx-auto text-center leading-relaxed">
        A next-generation blogging platform crafted with modern technology
        and designed for exceptional user experience.
      </p>
    </section>

    <!-- Features Section with glassmorphism -->
    <section class="grid md:grid-cols-2 gap-6 mb-20">
      {[
        {
          title: "Modern Architecture",
          description: "Built with cutting-edge technologies for optimal performance.",
          gradient: "from-purple-50 to-purple-100/50 dark:from-purple-900/20 dark:to-purple-800/20"
        },
        {
          title: "Lightning Fast",
          description: "Optimized for speed with static site generation.",
          gradient: "from-blue-50 to-blue-100/50 dark:from-blue-900/20 dark:to-blue-800/20"
        },
        {
          title: "Beautiful Design",
          description: "Clean, modern interface that puts your content first.",
          gradient: "from-pink-50 to-pink-100/50 dark:from-pink-900/20 dark:to-pink-800/20"
        },
        {
          title: "Full Featured",
          description: "Everything you need, right out of the box.",
          gradient: "from-emerald-50 to-emerald-100/50 dark:from-emerald-900/20 dark:to-emerald-800/20"
        }
      ].map(feature => (
        <div class={`rounded-2xl p-6 bg-gradient-to-br ${feature.gradient} backdrop-blur-sm border border-white/20 dark:border-white/10 shadow-xl shadow-black/5`}>
          <h3 class="text-xl font-semibold text-zinc-800 dark:text-zinc-100 mb-3">
            {feature.title}
          </h3>
          <p class="text-zinc-600 dark:text-zinc-300">
            {feature.description}
          </p>
        </div>
      ))}
    </section>

    <!-- Tech Stack Section with modern cards -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold text-zinc-800 dark:text-zinc-100 mb-10 text-center">
        Technology Stack
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {[
          { name: 'Astro', desc: 'Static Site Generator' },
          { name: 'Svelte', desc: 'Interactive UI' },
          { name: 'TailwindCSS', desc: 'Styling' },
          { name: 'SQLite', desc: 'Database' },
          { name: 'TypeScript', desc: 'Type Safety' },
          { name: 'Bun', desc: 'Runtime' }
        ].map(tech => (
          <div class="group hover:scale-105 transition-all duration-300">
            <div class="bg-white/80 dark:bg-zinc-800/80 backdrop-blur-sm rounded-xl p-5 border border-zinc-200 dark:border-zinc-700/50 shadow-lg shadow-black/5 hover:border-zinc-300 dark:hover:border-zinc-600">
              <h3 class="font-semibold text-zinc-800 dark:text-zinc-100 mb-2 text-lg">
                {tech.name}
              </h3>
              <p class="text-sm text-zinc-600 dark:text-zinc-300">
                {tech.desc}
              </p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact Section with gradient button -->
    <section class="text-center relative">
      <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-purple-100 to-blue-100 dark:from-purple-900/20 dark:to-blue-900/20 blur-3xl opacity-50"></div>
      <h2 class="text-3xl font-bold text-zinc-800 dark:text-zinc-100 mb-4">
        Get in Touch
      </h2>
      <p class="text-lg text-zinc-600 dark:text-zinc-300 mb-8 max-w-2xl mx-auto">
        Have questions or suggestions? We'd love to hear from you!
      </p>
      <a
        href="mailto:contact@example.com"
        class="inline-block bg-gradient-to-r from-purple-600 to-blue-600 dark:from-purple-500 dark:to-blue-500 text-white font-medium px-8 py-3 rounded-lg hover:opacity-90 transition-opacity shadow-lg"
      >
        Contact Us
      </a>
    </section>
  </div>
</Layout>
