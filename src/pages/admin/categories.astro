---
import AdminLayout from "../../layouts/AdminLayout.astro";

// 임시 데이터 (나중에 DB로 대체)
const categories = [
  { id: 1, name: "Technology", slug: "tech", parent: null, count: 5 },
  { id: 2, name: "Programming", slug: "programming", parent: 1, count: 3 },
  { id: 3, name: "Web Development", slug: "web-dev", parent: 2, count: 2 },
  { id: 4, name: "Lifestyle", slug: "lifestyle", parent: null, count: 4 },
];
---

<AdminLayout title="Categories">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Categories</h1>
      <button
        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        onclick="document.getElementById('addCategoryModal').classList.remove('hidden')"
      >
        Add Category
      </button>
    </div>

    <!-- Categories List -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
      <div class="p-6">
        <table class="w-full">
          <thead>
            <tr class="text-left border-b dark:border-gray-700">
              <th class="pb-4 text-gray-500 dark:text-gray-400">Name</th>
              <th class="pb-4 text-gray-500 dark:text-gray-400">Slug</th>
              <th class="pb-4 text-gray-500 dark:text-gray-400">Parent</th>
              <th class="pb-4 text-gray-500 dark:text-gray-400">Order</th>
              <th class="pb-4 text-gray-500 dark:text-gray-400">Posts</th>
              <th class="pb-4 text-gray-500 dark:text-gray-400">Actions</th>
            </tr>
          </thead>
          <tbody>
            {categories.map((category) => (
              <tr class="border-b dark:border-gray-700">
                <td class="py-4 text-gray-900 dark:text-white">{category.name}</td>
                <td class="py-4 text-gray-500 dark:text-gray-400">{category.slug}</td>
                <td class="py-4 text-gray-500 dark:text-gray-400">{category.order_index}</td>
                <td class="py-4 text-gray-500 dark:text-gray-400">
                  {category.parent ? categories.find(c => c.id === category.parent)?.name : '-'}
                </td>
                <td class="py-4 text-gray-500 dark:text-gray-400">{category.count}</td>
                <td class="py-4 space-x-2">
                  <button
                    class="px-3 py-1 text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
                    onclick={`editCategory(${category.id})`}
                  >
                    Edit
                  </button>
                  <button
                    class="px-3 py-1 text-sm text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300"
                    onclick={`deleteCategory(${category.id})`}
                  >
                    Delete
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add Category Modal -->
  <div id="addCategoryModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 w-full max-w-md">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Add New Category</h2>
      <form class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            Name
          </label>
          <input
            type="text"
            class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
            placeholder="Category name"
          />
        </div>
        <div>
            <div>
                <label class="block text-sm font-small text-gray-700 dark:text-gray-300 mb-1">
                Parent Category
                </label>
                <select
                    class="w-full px-3 py-2 border text-sm border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white mb-4"
                    >
                    <option value="">None</option>
                    {categories.map((category) => (
                    <option value={category.id}>{category.name}</option>
                    ))}
                </select>
            </div>
            <div class="flex-row">
                <label class="block text-sm font-small text-gray-700 dark:text-gray-300 mb-1">
                    Order
                </label>
                <input type="text"
                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white mb-4 right-0"
                    placeholder="Order number"
                    value="" />
            </div>
            <textarea
                  class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Category description"
                  rows="3"
                  >{categories.description}</textarea>
        </div>
        <div class="flex justify-end space-x-3">
          <button
            type="button"
            class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300"
            onclick="document.getElementById('addCategoryModal').classList.add('hidden')"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            Add Category
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function editCategory(id) {
      console.log('Edit category:', id);
      // 구현 예정
    }

    function deleteCategory(id) {
      if (confirm('Are you sure you want to delete this category?')) {
        console.log('Delete category:', id);
        // 구현 예정
      }
    }
  </script>
</AdminLayout>
