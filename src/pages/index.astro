---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Modern Blog - Home">
  <div class="prose dark:prose-invert mx-auto">
    <h1 class="text-4xl font-bold">Welcome to Modern Blog</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400">
      This is a modern blog built with Astro, Svelte, and more.
    </p>
    <div class="mt-8">
      <h2 class="text-2xl font-semibold">Recent Posts</h2>
      <div class="mt-4 grid gap-4">
        <!-- 여기에 나중에 블로그 포스트 목록이 들어갈 예정입니다 -->
        <p class="text-gray-600 dark:text-gray-400">No posts yet.</p>
      </div>
    </div>
  </div>
</Layout>
